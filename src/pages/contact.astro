---
import MainLayout from '@layout/MainLayout.astro'
---
<MainLayout pathname={Astro.url.pathname}>
<div class="container">
	<div class="form">

	</div>
	<div class="ascii">

	</div>
</div>
</MainLayout>

<style>
.container {  
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 100%;
  grid-auto-columns: 1fr;
  gap: 0px 0px;
  grid-auto-flow: row;
  grid-template-areas:
    "form ascii";
}

.form {
  justify-self: center;
  align-self: center;
  grid-area: form;
}
.ascii {
  justify-self: center;
  align-self: center;
  grid-area: ascii;
}
</style>
