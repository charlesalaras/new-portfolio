---
import type { ImageMetadata } from 'astro'
import { Image } from 'astro:assets'

interface Props {
  imagePath: string;
  altText: string;
}

const { imagePath, altText } = Astro.props
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/icons/*.svg')
---

<Image src={images[imagePath]()} alt={altText} class="logo"/>

<style>
.logo {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  fill: var(--text);
}
</style>
