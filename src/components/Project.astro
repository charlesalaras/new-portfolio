---
import Icon from './Icon.astro'
const {
  projectType,
  title,
  date,
  link,
  bio
} = Astro.props
---
<article class="project">
<details>
<summary>
<span>
<Icon name={`${projectType}`}/>
<h3>{title}</h3> | 
<span>{date}</span>
</span>
<span class="expand">
<em>Click to expand</em>
<Icon name="corner-right-down"/>
</span>
</summary>
<p>{bio}</p>
<a class="link" href={link} target="_blank">Learn more<Icon name="external-link"/></a>
</details>
</article>

<style>
h3 {
  margin: 0;
  font-size: 1rem;
}
.project {
  background-color: var(--secondary);
  border-radius: 0.5rem;
  padding: 0.5rem;
  margin-bottom: 1rem;
}
.project summary {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.expand {
  color: rgba(var(--text-rgb), 0.5);
}
span {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 1ch;
}
</style>
